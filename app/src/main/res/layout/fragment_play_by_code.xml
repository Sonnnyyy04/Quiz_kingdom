<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/castle_green"
    android:fitsSystemWindows="true"
    tools:context=".presentation.play_by_code.PlayByCodeFragment">

    <androidx.cardview.widget.CardView
        app:layout_constraintStart_toStartOf="@id/table"
        app:layout_constraintEnd_toEndOf="@id/table"
        app:layout_constraintBottom_toTopOf="@id/table"
        android:layout_width="wrap_content"
        android:layout_marginBottom="20dp"
        app:cardBackgroundColor="@color/wooden_brown"
        app:cardCornerRadius="30dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_height="wrap_content"
            android:text="your code"
            android:textSize="80sp"
            android:fontFamily="@font/blackwood_castle"
            android:textColor="@color/black"/>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_marginTop="40dp"
        android:id="@+id/table"
        app:cardCornerRadius="30dp"
        app:cardBackgroundColor="@color/wooden_brown"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/wooden_brown"            >
            <TextView
                android:id="@+id/symbol_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/oval_drawable"
                android:layout_margin="20dp"
                android:text="0"
                android:gravity="center"
                android:fontFamily="@font/blackwood_castle"
                android:textColor="@color/black"
                android:textStyle=""
                android:textSize="90sp" />



        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/wooden_brown"
            >
            <TextView
                android:layout_margin="20dp"
                android:id="@+id/symbol_2"
                android:background="@drawable/oval_drawable"
                android:fontFamily="@font/blackwood_castle"

                android:layout_width="wrap_content"
                android:text ="0"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="90sp"                android:layout_height="wrap_content"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/wooden_brown"
            >
            <TextView
                android:layout_margin="20dp"
                android:id="@+id/symbol_3"
                android:background="@drawable/oval_drawable"
                android:fontFamily="@font/blackwood_castle"

                android:layout_width="wrap_content"
                android:text ="0"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="90sp"                android:layout_height="wrap_content"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/wooden_brown"
            >
            <TextView
                android:layout_margin="20dp"
                android:id="@+id/symbol_4"
                android:layout_width="wrap_content"
                android:text ="0"
                android:gravity="center"
                android:background="@drawable/oval_drawable"
                android:fontFamily="@font/blackwood_castle"

                android:textColor="@color/black"
                android:textSize="90sp"                android:layout_height="wrap_content"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/wooden_brown"
            >
            <TextView
                android:layout_margin="20dp"
                android:id="@+id/symbol_5"
                android:layout_width="wrap_content"
                android:text ="0"
                android:gravity="center"
                android:background="@drawable/oval_drawable"
                android:fontFamily="@font/blackwood_castle"

                android:textColor="@color/black"
                android:textSize="90sp"                android:layout_height="wrap_content"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/wooden_brown"
            >
            <TextView
                android:layout_margin="20dp"
                android:id="@+id/symbol_6"
                android:layout_width="wrap_content"
                android:text ="0"
                android:gravity="center"
                android:background="@drawable/oval_drawable"
                android:fontFamily="@font/blackwood_castle"

                android:textColor="@color/black"
                android:textSize="90sp"
                android:layout_height="wrap_content"/>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
    </androidx.cardview.widget.CardView>

    <EditText
        android:id="@+id/code"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:alpha="1"
        android:hint="Введите ваш код"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@id/table"
        app:layout_constraintEnd_toEndOf="@id/table"
        app:layout_constraintStart_toStartOf="@id/table"
        app:layout_constraintTop_toTopOf="@id/table" />

    <Button
        android:id="@+id/btnNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:backgroundTint="@color/wooden_brown"
        android:fontFamily="@font/blackwood_castle"
        android:text="продолжить"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>